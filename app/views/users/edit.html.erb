<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>ユーザー情報編集</h3>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <h4>ユーザー名</h4>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.submit '更新する', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>