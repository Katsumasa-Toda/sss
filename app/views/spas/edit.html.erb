<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>銭湯情報編集</h3>
      <%= form_with model:@spa, url:"/spas/#{@spa.id}", local:true do |f| %>
        <div class="form-group">
          <h4>銭湯名</h4>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <h4>住所</h4>
          <%= f.text_area :address %>
        </div>
        <div class="form-group">
          <h4>ポイント</h4>
          <%= f.text_field :introduction %>
        </div>
        <div class="form-group">
          <h4>浴槽数</h4>
          <%= f.text_field :bath %>
        </div>
        <div class="form-group">
          <h4>駐車場数</h4>
          <%= f.text_field :parking %>
        </div>
        <div class="form-group">
          <h4>営業時間</h4>
          <%= f.text_field :opening %>
        </div>
        <div class="form-group">
          <% f.submit '更新する', class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to "銭湯詳細", spa_path(@spa.id), %>
      |
      <%= link_to "戻る", spa_path %>
    </div>
  </div>
</div>