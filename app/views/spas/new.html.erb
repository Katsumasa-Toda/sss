<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>新規銭湯登録</h3>
      <%= form_with model:@spa, local:true do |f| %>
        <div class="form-group">
          <h4>銭湯名</h4>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <h4>住所</h4>
          <%= f.text_area :address %>
        </div>
        <div class="form-group">
          <h4>ポイント</h4>
          <%= f.text_field :introduction %>
        </div>
        <div class="form-group">
          <h4>浴槽数</h4>
          <%= f.text_field :bath %>
        </div>
        <div class="form-group">
          <h4>駐車場数</h4>
          <%= f.text_field :parking %>
        </div>
        <div class="form-group">
          <h4>営業時間</h4>
          <%= f.text_field :opening %>
        </div>
        <div class="form-group">
          <% f.submit '投稿する', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>